.row
    #custom-search-input
        .input-group.col-md-12
            input.search-query.form-control(type='text', placeholder='Conversation')
            button.btn.btn-danger(type='button')
                span.glyphicon.glyphicon-search
    .dropdown.all_conversation
        button#dropdownMenu2.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            i.fa.fa-weixin(aria-hidden='true')
            |                All Conversations
            span.caret.pull-right
        ul.dropdown-menu(aria-labelledby='dropdownMenu2')
            li
                a(href='#')  All Conversation 
                ul.sub_menu_.list-unstyled
                    li
                        a(href='#')  All Conversation 
                    li
                        a(href='#') Another action
                    li
                        a(href='#') Something else here
                    li
                        a(href='#') Separated link
            li
                a(href='#') Another action
            li
                a(href='#') Something else here
            li
                a(href='#') Separated link
    .member_list
        span(
            *ngIf="contactsLoading"
        )
            p Loading...
        span(
            *ngIf="!contactsLoading"
        )
            ul.list-unstyled
                li(
                    '*ngFor'="let user of messageContacts, let i = index",
                    routerLinkActive="active"
                    '[routerLinkActiveOptions]'="{exact: true}"
                    routerLink="/app/messages/{{user.username}}"
                ).left.clearfix
                    span.chat-img.pull-left
                        img.img-circle(src='https://upload.wikimedia.org/wikipedia/commons/thumb/1/12/User_icon_2.svg/2000px-User_icon_2.svg.png', alt='User Avatar')
                    .chat-body.clearfix
                        .header_sec
                            strong.primary-font {{user.username}}
                            strong.pull-right
                                | 09:50AM
                        .contact_sec
                            span.primary-font This is the latest message...
                            span.badge.pull-right 3